<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student List</title>
  <link rel="stylesheet" href="/style.css"> <!-- âœ… Link to public/style.css -->
</head>
<body>
  <div class="container">
    <h1>Student List</h1>
    <a href="/add"><button>Add New Student</button></a>
    <table>
      <tr>
        <th>Name</th><th>Email</th><th>Branch</th><th>Year</th><th>Actions</th>
      </tr>
      <% students.forEach(student => { %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.email %></td>
          <td><%= student.branch %></td>
          <td><%= student.year %></td>
          <td>
            <a href="/edit/<%= student._id %>" class="btn-edit">Edit</a>
            <a href="/delete/<%= student._id %>" class="btn-delete">Delete</a>
          </td>
        </tr>
      <% }) %>
    </table>
  </div>
</body>
</html>
